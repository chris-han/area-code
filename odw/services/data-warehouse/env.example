# LLM Configuration for Unstructured Data Processing
# Copy this file to .env and update with your actual API key

# Required: Anthropic API Key for Claude LLM integration
# Get your API key at: https://console.anthropic.com
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# LLM Model Configuration - Use recommended defaults
ANTHROPIC_MODEL=claude-sonnet-4-20250514
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000

# Field Validation - Enabled by default to ensure clean data extraction
LLM_STRICT_FIELD_VALIDATION=true

# Batch Processing - Enabled by default for better performance
# Set to false if you experience hallucinations or cross-file data mixing
LLM_ENABLE_BATCH_PROCESSING=true

# Batch Processing Parameters - Recommended defaults
LLM_MAX_BATCH_SIZE=10
LLM_MIN_BATCH_SIZE=1
LLM_MAX_TOKENS_PER_REQUEST=4000
LLM_MAX_CONTENT_PER_FILE=2000

# S3 / MinIO Credentials
MOOSE_S3_ACCESS_KEY_ID=your-access-key-id
MOOSE_S3_SECRET_ACCESS_KEY=your-secret-access-key
MOOSE_S3_REGION_NAME=us-east-2
MOOSE_S3_BUCKET_NAME=yl-billing-data

# ClickHouse Connection
MOOSE_CLICKHOUSE_USER=your-clickhouse-user
MOOSE_CLICKHOUSE_PASSWORD=your-clickhouse-password
MOOSE_CLICKHOUSE_USE_SSL=true
MOOSE_CLICKHOUSE_HOST=your-clickhouse-host
MOOSE_CLICKHOUSE_HOST_PORT=8443
MOOSE_CLICKHOUSE_NATIVE_PORT=8443
