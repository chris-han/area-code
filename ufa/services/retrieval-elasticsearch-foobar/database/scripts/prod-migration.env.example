# Environment variables for prod migration script
# Copy this file to prod-migration.env and fill the values to skip prompts during testing

# PostgreSQL connection string (Supabase Pooler format)
# Example: postgresql://postgres.PROJECT:PASSWORD@aws-0-region.pooler.supabase.com:6543/postgres
PG_CONNECTION_STRING=

# Elasticsearch Cloud URL (include port, usually :9243)
# Example: https://my-deployment.es.us-central1.gcp.cloud.es.io:9243
ES_URL=

# Elasticsearch API Key (base64 encoded)
# Get from Elasticsearch Cloud Console -> Security -> API Keys
ES_API_KEY=

# Optional: Clear existing data (true/false, default: false)
CLEAR_DATA=false

# Optional: Batch size for migration (default: 5000)
BATCH_SIZE=10000

# Optional: Number of parallel workers (default: 8)
WORKERS=2

# Optional: Chunk size for streaming migration (default: 50000)
CHUNK_SIZE=50000

# Table configuration
# Options: foo, bar
TABLE_NAME=foo
INDEX_NAME=foos